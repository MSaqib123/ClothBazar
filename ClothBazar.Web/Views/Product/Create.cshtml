@model IEnumerable<Category>
@{
    ViewBag.Title = "Create";
}


<form id="createForm">

    <div class="form-horizontal">
        <hr />

        <h2>Create Product</h2>
        <br />
        <div class="form-group">
            <label>Category</label>
            <select name="CategoryId">
                @foreach (var item in Model)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="Name" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <input type="text" class="form-control" name="Description" />
        </div>

        <div class="form-group">
            <label>Price</label>
            <input type="text" class="form-control" name="Price" />
        </div>

        @*<div class="form-group">
            <label>Category_Image</label>
            <input id="ImageURL" name="ImageURL" hidden />
            <input type="file" class="form-control" id="imageUpload" name="Image" accept=".png,.jpg" />
            <img id="categoryImage" width="70" />
        </div>*@
        <div class="form-group">
            <button type="button" id="createBtn"> Create </button>
        </div>
    </div>
</form>

<br />
<script>
    $("#createBtn").click(function () {
        @*alert("good");*@

        $.ajax({
            type: "POST",
            url: "/Product/Create/",
            data: $("#createForm").serialize(),
        })
        .done(function (response) {
            $("#tableContainer").html(response);
            $("#newForm").html("");
        })
        .fail(function () {
            alert("fail");
        })
    })
</script>