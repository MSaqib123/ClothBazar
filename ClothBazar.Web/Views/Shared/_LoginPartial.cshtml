@using Microsoft.AspNet.Identity

@if (!Request.IsAuthenticated)
{
    <li class="">
        <a class="revicon-login" style="font-size:20px" href="@Url.Action("Login","Account")"></a>
    </li>
}
else
{
    <li class="box-cart nav-top-cart-wrapper">
        <a class="font-weight-bold">
            @Html.Raw(User.Identity.Name.Length > 3 ? User.Identity.Name.Substring(0, 4) : User.Identity.Name)
        </a>
        <div class="nav-shop-cart" style="width:110px !important">
            <div class="widget_shopping_cart_content">
                <div class="woocommerce-min-cart-wrap">
                    <ul class="">
                        <li>
                            <a class="revicon-logout" href="@Url.Action("LogOff","Account")">Logout</a>
                        </li>
                        <li class="mt-2">
                            <a class="revicon-doc" href="@Url.Action("Profile","Account")">Profile</a>
                        </li>
                    </ul>
                </div><!-- /.widget_shopping_cart_content -->
            </div>
        </div><!-- /.nav-shop-cart -->
    </li>
}


