@model  ClothBazar.Web.ViewModel.ShopProductFilterVM

<div class="filter-shop clearfix">
    <p class="showing-product float-right">
        @{
            var totalProduct = Model.Pager.TotalItems;
            var from = ((Model.Pager.CurrentPage - 1) * Model.Pager.PageSize) + 1;
            var to = Math.Min(from + Model.Pager.PageSize - 1, totalProduct);
        }
        Showing @from – @to out of @totalProduct Products
    </p>
</div><!-- /.filte-shop -->

<div class="product-content product-threecolumn product-slidebar clearfix">
    <ul class="product style2 sd1">
        @foreach (var product in Model.Products)
        {
            var defaultImage = "/Content/images/No_Image.jpg";
            var imageUrl = string.IsNullOrEmpty(product.ImageURL) ? defaultImage : product.ImageURL;

            <li class="product-item">
                <div class="product-thumb clearfix">
                    <a href="@Url.Action("ProductDetails", "Product", new { id = product.Id })">
                        <img src="@imageUrl" alt="image" style="height:250px">
                    </a>
                    @*<span class="new">New</span>*@
                </div>
                <div class="product-info clearfix">
                    <span class="product-title">@product.Name</span>
                    <div class="price">
                        <ins>
                            <span class="amount">Rs @product.Price</span>
                        </ins>
                    </div>
                </div>
                <div class="add-to-cart text-center text-white py-2 addToCartBtn" data-id="@product.Id">
                    ADD TO CART
                </div>
                <a href="#" class="like"><i class="fa fa-heart-o"></i></a>
            </li>
        }
    </ul><!-- /.product -->
</div><!-- /.product-content -->

<div class="product-pagination text-center clearfix">
    <ul class="flat-pagination">
        @if (Model.Pager.CurrentPage > 1)
        {
            <li class="prev">
                <a href="#" class="pageButton" data-pageNo="@(Model.Pager.CurrentPage-1)"><i class="fa fa-angle-double-left"></i></a>
            </li>
            <li class="first">
                <a href="#" class="pageButton" data-pageNo="1"><i class="fa fa-angle-left"></i></a>
            </li>
        }
        @for (int page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
        {
            string activeClass = Model.Pager.CurrentPage == page ? "active" : string.Empty;
            <li class="@activeClass">
                <a class="pageButton" data-pageNo="@page">@page</a>
            </li>
        }


        @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
        {
            <li class="end">
                <a href="#" class="pageButton" data-pageNo="@(Model.Pager.EndPage)">
                    <i class="fa fa-angle-right"></i>
                </a>
            </li>
            <li class="">
                <a href="#" class="pageButton" data-pageNo="@(Model.Pager.CurrentPage+1)">
                    <i class="fa fa-angle-double-right"></i>
                </a>
            </li>
        }
    </ul>
</div>



<script>

    //__________________ AddToCart Product ______________________
    var products;
    $(".addToCartBtn").click(function () {

        var existingCookieData = $.cookie('CartProducts');
        if (existingCookieData != null || existingCookieData == "" || existingCookieData != undefined) {
            products = existingCookieData.split('-');
        }
        else {
            products = [];
        }

        var productId = $(this).attr("data-id");
        products.push(productId);
        $.cookie('CartProducts', products.join('-'), { path: '/' });

        loadProductCart();
        //________ SweetAlert Toaster _________
        const Toast = Swal.mixin({
            toast: true,
            position: 'right',
            background: '#FF6D60',//'#fff',
            color: '#fff',
            showConfirmButton: false,
            timer: 600,
            timerProgressBar: true,
        })
        Toast.fire({
            icon: 'success',
            title: 'Add ToCart Successfully'
        })
    })
</script>